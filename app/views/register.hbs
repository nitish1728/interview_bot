        const prev = document.querySelectorAll(".Previous");
        const next = document.querySelectorAll(".Next");
        const progress = document.getElementById("progress_line");
        const Steps = document.querySelectorAll(".input_group");
        const progress_bar = document.querySelectorAll(".progress");

        let StepsNum = 0;
        next.forEach((btn) => {
            btn.addEventListener("click", () => {
                StepsNum++;
                updateSteps();
                update_progress_bar()
                console.log(StepsNum);
            });
        });
        prev.forEach((btn) => {
            btn.addEventListener("click", () => {
                StepsNum--;
                updateSteps();
                update_progress_bar();
                console.log(StepsNum);
            });
        });

        function updateSteps() {
            Steps.forEach(Step => {
                Step.classList.contains("input_group_active") &&
                    Step.classList.remove("input_group_active");

            })
            Steps[StepsNum].classList.add("input_group_active");
            console.log(StepsNum);
        }

        function update_progress_bar() {
            progress_bar.forEach((progressStep, idx) => {
                if (idx < StepsNum + 1) {
                    progressStep.classList.add("progress_active");
                } else {
                    progressStep.classList.remove("progress_active");
                }
            });
            const progress_bar_line = document.querySelectorAll(".progress_active");



            progress.style.width = ((progress_bar_line.length - 1) / (progress_bar.length - 1)) * 100 + "%";

        }
    </script>
